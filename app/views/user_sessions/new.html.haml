%h1 Login
.create_account 
  = "or #{link_to 'register', new_account_path}"
  
- form_for(@user_session, :url => user_session_path) do |f|
  = f.error_messages
  = f.label :email
  %br
  = f.text_field :email
  %br
  %br
  = f.label :password
  %br
  = f.password_field :password
  %br
  %br
  = f.check_box :remember_me
  = f.label :remember_me
  %br
  %br
  = f.submit "Login"
  .forgot_password
    = "did you #{link_to 'forget your password?', new_password_reset_path}"